{
  "name": "@kinzal-net/ui",
  "version": "0.1.0",
  "description": "Design System for kinzal.net",
  "sideEffects": false,
  "type": "module",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    },
    "./styles": {
      "import": "./src/styles/globals.css",
      "default": "./src/styles/globals.css"
    }
  },
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "files": [
    "dist",
    "src/styles"
  ],
  "scripts": {
    "build": "vite build && tsc --emitDeclarationOnly",
    "build-storybook": "storybook build",
    "dev": "vite build --watch",
    "format": "prettier --write \"src/**/*.{ts,tsx,css,json}\"",
    "format:check": "prettier --check \"src/**/*.{ts,tsx,css,json}\"",
    "lint": "eslint src/ && stylelint \"src/**/*.css\"",
    "lint:fix": "eslint src/ --fix && stylelint \"src/**/*.css\" --fix",
    "quality": "npm run typecheck && npm run lint && npm run format:check && npm run test && npm run build-storybook && npm run test:a11y",
    "storybook": "storybook dev -p 6007",
    "test": "vitest run",
    "test:a11y": "concurrently -k -s first -n \"SB,TEST\" -c \"magenta,blue\" \"npm run test:a11y:serve\" \"npm run test:a11y:run\"",
    "test:a11y:run": "wait-on http://127.0.0.1:6007 && test-storybook --url http://127.0.0.1:6007",
    "test:a11y:serve": "http-server storybook-static --port 6007 --silent",
    "test:vrt": "playwright test",
    "test:watch": "vitest",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "tailwind-merge": "^3.3.1"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.1",
    "@playwright/test": "^1.56.1",
    "@storybook/addon-a11y": "^10.0.8",
    "@storybook/addon-docs": "^10.0.8",
    "@storybook/addon-themes": "^10.0.8",
    "@storybook/react-vite": "^10.0.8",
    "@storybook/test-runner": "^0.24.2",
    "@tailwindcss/vite": "^4.1.17",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/react": "^19.2.7",
    "@types/react-dom": "^19.2.3",
    "@vitejs/plugin-react": "^5.1.1",
    "axe-playwright": "^2.2.2",
    "concurrently": "^9.2.1",
    "eslint": "^9.39.1",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^7.0.1",
    "http-server": "^14.1.1",
    "jest-axe": "^10.0.0",
    "jsdom": "^27.2.0",
    "lucide-react": "^0.555.0",
    "postcss": "^8.4.49",
    "postcss-styled-syntax": "^0.7.1",
    "prettier": "^3.7.4",
    "prettier-plugin-tailwindcss": "^0.7.2",
    "storybook": "^10.0.8",
    "stylelint": "^16.26.1",
    "stylelint-config-standard": "^39.0.1",
    "tailwindcss": "^4.1.17",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.48.0",
    "vite": "^7.2.4",
    "vite-plugin-dts": "^4.5.4",
    "vitest": "^3.2.4",
    "wait-on": "^9.0.3"
  },
  "peerDependencies": {
    "react": "^18.0.0 || ^19.0.0",
    "react-dom": "^18.0.0 || ^19.0.0"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
